[Unit]
Description=Systune Service
SourcePath=/usr/bin/qcom-systune
After=multi-user.target

[Service]
User=root
Group=root
Restart=always
RemainAfterExit=yes
ExecStart=/usr/bin/qcom-systune --start
TimeoutStopSec=1

[Install]
WantedBy=multi-user.target
