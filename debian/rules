#!/usr/bin/make -f

%:
	dh $@

override_dh_installsystemd:
	dh_installsystemd --name=urm

override_dh_auto_install:
	dh_auto_install -- DESTDIR=$(CURDIR)/debian/tmp
	mkdir -p debian/tmp/usr/lib/systemd/system/
	if [ -f debian/tmp/usr/lib/${DEB_HOST_MULTIARCH}/systemd/system/urm.service ]; then \
	  mv debian/tmp/usr/lib/${DEB_HOST_MULTIARCH}/systemd/system/urm.service debian/tmp/usr/lib/systemd/system/urm.service; \
	  rmdir debian/tmp/usr/lib/${DEB_HOST_MULTIARCH}/systemd/ 2>/dev/null || true; \
	fi

override_dh_install:
	dh_install
